{
  "compilerOptions": {
    "sourceMap": false,
    "experimentalDecorators": true,
    "target": "ES6",
    "jsx": "react",
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "es2016"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "../../es6/",
    "moduleResolution": "node"
  },
  "include": [
    "../../es6/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
